{
  "name": "frontend",
  "version": "1.0.0",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "cucumber-js tests/features/ --require-module ts-node/register --require \"tests/step-definitions/**/*.ts\" --format progress",
    "test:headed": "cucumber-js tests/features/ --require-module ts-node/register --require \"tests/step-definitions/**/*.ts\" --format progress --world-parameters='{\"headed\": true}'",
    "test:ci": "cucumber-js tests/features/ --require-module ts-node/register --require \"tests/step-definitions/**/*.ts\" --format progress --format json:tests/reports/cucumber-report.json",
    "test:docker": "docker build -t automation-frontend -f Dockerfile.frontend . && docker run -v $(pwd)/test-results:/app/test-results automation-frontend",
    "test:performance": "npx cucumber-js tests/features/ --require-module ts-node/register --require \"tests/step-definitions/**/*.ts\" --format progress --parallel 2"
  },

  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@cucumber/pretty-formatter": "^2.3.0",
    "@playwright/test": "^1.56.1"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
